{
    "modelPath": "models/yolo11n-seg-version-1-0-0.onnx",
    "isSegmentation": true,
    "inputSize": 640,
    "confidenceThreshold": 0.5,
    "frameWidth": 640,
    "frameHeight": 640,
    "fps": 60,
    "captureDirectory": "output/captures",
    "debugDirectory": "output/debug",
    "boxColor": [0, 255, 0],
    "textColor": [0, 0, 0],
    "lineThickness": 2,
    "fontSize": 0.8,
    "maskOpacity": 0.4,
    "maskColors": [
        [128, 0, 128],
        [0, 128, 255],
        [255, 0, 0],
        [0, 0, 255],
        [255, 255, 0],
        [255, 0, 255],
        [0, 255, 255],
        [128, 255, 0],
        [255, 128, 0],
        [0, 255, 0]
    ],
    "jpegQuality": 95,
    "classNames": ["label"],
    "filterSettings": {
        "maxAreaRatio": 0.40,
        "topNDetections": 1
    },
    "performanceLogging": {
        "enabled": true,
        "logInterval": 1,
        "showInStatusBar": true
    },
    "preprocessing": {
        "enabled": true,
        "forceLandscape": true,
        "aiOrientationFix": true,
        "aiConfidenceThreshold": 0.6,
        "paddleModelPath": "models/paddle/PP-LCNet_x1_0_doc_ori",
        "displayWidth": 230,
        "displayHeight": 100,
        "enhancement": {
            "brightnessEnabled": true,
            "brightnessClipLimit": 2.5,
            "brightnessTileSize": 8,
            "sharpnessEnabled": true,
            "sharpnessSigma": 1.0,
            "sharpnessAmount": 1.5
        }
    },
    "ocrPipeline": {
        "enabled": true,
        "debugBasePath": "output/debug",
        "qrDetector": {
            "tryRotate": true,
            "tryDownscale": true
        },
        "componentExtractor": {
            "aboveQrWidthRatio": 0.35,
            "aboveQrHeightRatio": 0.20,
            "belowQrWidthRatio": 0.65,
            "belowQrHeightRatio": 0.45,
            "padding": 5
        },
        "ocr": {
            "lang": "en",
            "useTextlineOrientation": false,
            "textDetThresh": 0.3,
            "textDetBoxThresh": 0.5,
            "textRecScoreThresh": 0.5,
            "device": "cpu"
        },
        "textProcessor": {
            "minFuzzyScore": 0.80,
            "productsJsonPath": "data/products.json",
            "sizesJsonPath": "data/sizes.json",
            "colorsJsonPath": "data/colors.json"
        }
    },
    "maxCameraSearch": 2,
    "windowMinWidth": 1000,
    "windowMinHeight": 700
}
